
%h1.font.black_font
	Zvol program:

%table.table.programs
	%thead
		%tr
			%th.name
			%th.action1
			%th.action2

	%tbody
		-@programs.each do |program|
			%tr
				%td.name
					%h2
						= program.name
				%td.action1
					- if @user.program_status
						/ - if @user_readed[@user.last_task_number] == false

						= link_to "Dále", task_user_program_path(@user.id, program.id), :class => "btn btn-danger btn-xlarge"

						/ - else
						/ 	= link_to "Dále", user_task_path(@user.id, program.id), :class => "btn btn-danger btn-xlarge"

					- else
						= link_to "Začít", begin_program_user_program_path(@user.id, program.id), :class => "btn btn-success btn-xlarge"
				%td.action2
					= link_to "Info", info_user_program_path(@user.id, program), :class => "btn btn-primary btn-xlarge"

/ = render :partial => "common/back"
.back-btn
	= link_to "Zpět", root_path, :class => "btn btn-warning btn-xlarge font"