.container
	%h2
		%i.icon-group
		Užívatelé

= link_to new_admin_user_path, :class=>"btn btn-info btn-new" do
	%i.icon-plus-sign
	Nový užívatel


%table.users.table.table-hover
	%thead
		%tr
			%th.name
				Jméno
			%th.program
				Aktuální program
			%th.action
				Akce
	%tbody
		- @users.each do |user|
			%tr
				%td.name
					= user.name
				%td.program
					- unless user.program_id
						nic
					-else
						= Program.find(user.program_id).name
				%td.action
					= link_to admin_user_path(user.id), :class => "show_link" do
						%i.icon-info
						náhled
					= link_to edit_admin_user_path(user.id), :class => "edit_link"  do
						%i.icon-edit
						upravit
					= link_to admin_user_path(user.id), :confirm => "Smazat úkol #{user.name} ?", :method => :delete, :class => "delete_link" do
						%i.icon-trash
						smazat