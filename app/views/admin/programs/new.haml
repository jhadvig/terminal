.container
	%h2
		%i.icon-rocket
		Nový program

= form_for [:admin,@program], :method => :post do |c|
	.name.control-group
		= c.label "Jmeno"
		= c.text_field :name, :placeholder => "Jméno programu"
	.info.control-group
		= c.label :info
		= c.text_area :info, :placeholder => "Informace o programu", :size => "30x5"
	.mp3.control-group
		= c.file_field :mp3
	.submit.control-group
		= c.submit "Vytvoř program", :class => "btn btn-info"